<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> 
    </title>
    <!-- links-------------------------- -->
    <link rel="stylesheet" href="\public\admin_styles.css">
    <script src="https://kit.fontawesome.com/b7a2ac83f3.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="main">
        <aside>
            <div class="logo">
                <a href="/">
                    <img src="https://www.dolphincoveja.com/Content/src/dc-logo.png" alt="dolphin_cove_logo">
                </a>
            </div>
            <br><br>
            <!-- info imported from database -->
            <div class="admin_info">
                <img src="https://i.pinimg.com/originals/d0/53/f2/d053f2394d420d8d3712046f4e8f80cc.jpg" alt="admin_pic">

                <div class="admin_name">
                    <h3>
                        Admin
                    </h3>
                </div>
            </div>
            <br><br>
            <p class="tables">
                <i class="fa-solid fa-table-cells"></i>
                Tables
            </p>
            <!-- <br> -->
            <p class="table">
                <a href="reservations">
                    Reservations
                </a>
            </p>
            <p class="table">
                <a href="tour_companies">
                    Tour Companies
                </a>
            </p>
            <p class="table">
                <a href="programs">
                    Dolphin Cove Programs
                </a>
            </p>

            <a href="admin/admin_logout">Log out</a>
        </aside>

        <div class="content">
            <div class="content_head">
                <h2>Reservations Table</h2>
                <a href="/admin/create-reservation">Create Reservation</a>
            </div>
                <br>
            <div class="content_table">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Hotel Name</th>
                            <th>First Name</th>
                            <th>Last name</th>
                            <th>Guests Number</th>
                            <th>Program</th>
                            <th>Payment Method</th>
                            <th>Tour Company</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(reservations).forEach((reservations) => { %>
                        <tr>
                            <td><%= reservations.reservation_id %> </td>
                            <td><%= reservations.hotel_name %> </td>
                            <td><%= reservations.frst_nm %> </td>
                            <td><%= reservations.last_nm %> </td>
                            <td><%= reservations.guests_numb %> </td>
                            <td><%= reservations.program_name %> </td>
                            <td><%= reservations.method_name %> </td>
                            <td><%= reservations.comp_name %> </td>
                            <td>
                                <a href="/admin/reservations/edit/<%= reservations.reservation_id %> ">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="/admin/delete/<%= reservations.reservation_id%> ">
                                    <i class="fa-regular fa-trash-can"></i>
                                </a>
                            </td>
                        </tr> 
                        <% }); %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>